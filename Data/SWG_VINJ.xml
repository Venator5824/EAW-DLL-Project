<xml version="1.0" encoding="utf-8">
	<DLLData>
		<ProjectilesData>
			<Items>
				<!-- section *1-->
				<Item key="PROJ_SHIP_TWIN_TURBOLASER_BLUE_VENATOR">
					<fMinDamageMultAbsolute value="0.4069"/>
					<!-- Formula is: 
						- MULT_RANGE is multiplier for damage by range, [float]
						- current_dist is current travveled distance for the projectile when hitting, what is (start x,y,z)->(hit x,y,z) [float]
						- max_dist is the maximum distance the projectile is allowed to fly and exist (set in the XML usually) [float]
						- R is ratio from 1.0 - current_dist/max_dist. [float]
					MULT_RANGE = Mult1 * R * R + Mult2 * R + Mult 3; Limit lower: MinDamageMultAbsolute. Limit upper: None [float]
						-> And then, the MULT RANGE is multiplied with base damage, and then the game does internal multiplication with damage to armor matrix (XML) and possible other modifiers [float]
					-->
					<fMult1 value="-0.7069"/>
					<fMult2 value="1.4669"/>
					<fMult3 value="0.5569"/>
				</Item>
				<Item key="PROJ_SHIP_TWIN_TURBOLASER_BLUE_IMPERATOR">
					<!-- never below this value for range multiplier-->
					<fMinDamageMultAbsolute value="0.4500"/>
					<fMult1 value="0.0600"/>
					<fMult2 value="1.2500"/>
					<fMult3 value="0.4500"/>
				</Item>
				<!-- just add new items below-->
				<!-- non-exsitend projectiles will just be ignored-->
				<!-- non listed laser will not do range based damage-->
			</Items>
			<Enabled value="true"/>
		</ProjectilesData>
		<HardpointData>
			<Items>
				<!-- for testing first -->
				<Item unit="Republic_Venator_Class_Star_Destroyer" key="HP_Republic_Venator_Main_Hangar">
					<Abilities />
					<Events>
						<Item name="Reduce_Accuracy">
							<Change key="accuracy" value="0.50"/>
						</Item>
					</Events>
					<lua_Script value="NULL"/>
				</Item>
			</Items>
			<bEnabled value="true"/>
			<!-- how often to recheck all hardpoints listed for status -->
			<uUpdateRateMS value="2500"/>
		</HardpointData>
		<LoggingData>
			<uDebugLevel value="2"/> <!-- 0 is none, 1 is startup, shutdown and error, 2 is all data-->
			<sLoggingFile value="VDLLInject.log"/>
		</LoggingData>
		<AllowLUAapi value="true"/>
		<Enable value="true"/>	
	</DLLData>
</xml>



